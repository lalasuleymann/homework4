@model ChangeRoleViewModel
@{
    ViewData["Title"] = "ChangeRole";
}

<div class="container " style="height:100vh;">
    <div class="row justify-content-center">
        <div class="col-5 p-5 m-5 " style="background-color:white;">
            <div class="">
                <form class="" style="background-color:white;" method="post">
                    <div class="text-danger" asp-validation-summary=ModelOnly></div>
                    <div class="form-group">
                        <label asp-for="Role">Current Role</label>
                        <input class="form-control" placeholder="CurrentPassword" asp-for="Role">
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role">New Role</label>
                        <input class="form-control" placeholder="new password" asp-for="Role">
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                    </div>
                </form>
                <br />
                <a asp-controller="UserManager" asp-action="index"><div>back to users page</div></a>
            </div>
        </div>
    </div>
</div>